<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">


    <t t-name="social.link.dialog">
        <div class="text-center">
            <div class="o_social_media_cards row">
                <t t-foreach="widget.media" t-as="media">
                    <div class="col-md-3">
                        <div class="dr_media_card card p-2 border rounded" t-att-data-media-id="media.id">
                            <div class="card-body">
                                <img class="img img-fluid" t-attf-src="/dr_social_website/static/src/img/#{media.onyx_media_type}.svg"/>
                                <b class="mt-1 d-block" t-esc="media.name"> </b>
                            </div>
                        </div>
                    </div>
                </t>
                <div class="col-md-3" style="flex: 0 0 25%; max-width: 41%;">
                    <div class="dr_media_card card p-2 border rounded" t-att-data-media-id="3">
                        <div class="card-body">
                            <img class="img dr_img-fluid" style="max-width: 100%; height: 63px !important;" t-attf-src="/dr_social_website/static/src/img/linkedin.svg"/>
                            <b class="mt-1 d-block"> LinkedIn Personal Profile </b>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </t>

</templates>
