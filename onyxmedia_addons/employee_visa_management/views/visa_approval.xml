<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    visa.approval form view-->
    <record id="visa_approval_form" model="ir.ui.view">
        <field name="name">visa.approval.form</field>
        <field name="model">visa.approval</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved,expired"/>
                    <button name="button_visa_approve" string="Approve" class="oe_highlight" type="object"
                            groups="employee_visa_management.visa_manager"/>
                    <button name="button_visa_submit" string="Submit" class="oe_highlight" type="object"/>
                    <button name="button_renew" string="Renew" class="oe_highlight" type="object" states="expired"/>
                    <button name="button_reject" string="Reject" class="oe_highlight" type="object"
                            groups="employee_visa_management.visa_manager"/>
                </header>
                <sheet>
                    <h1 class="head-class">
                        <field name="name"/>
                    </h1>
                    <group col="4" colspan="2">
                        <field name="application_date"/>
                        <field name="employee_name"/>
                        <field name="visa_application_no" readonly="1"/>
                        <field name="expire_date" readonly="1"/>
                        <field name="visa_type"/>
                    </group>
                    <notebook>
                        <page string="Visa Application">
                            <group col="4" colspan="2">
                                <field name="nationality"/>
                                <field name="profession"/>
                                <field name="passport"/>
                                <field name="gender"/>
                                <field name="department_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="inherit_visa_approval_form" model="ir.ui.view">
        <field name="name">visa.approval.form</field>
        <field name="model">visa.approval</field>
        <field name="inherit_id" ref="employee_visa_management.visa_approval_form"/>
        <field name="groups_id" eval="[(4, ref('employee_visa_management.visa_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='visa_application_no']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='expire_date']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>

    <!--    visa.approval tree view-->
    <record id="visa_approval_tree" model="ir.ui.view">
        <field name="name">visa.approval.tree</field>
        <field name="model">visa.approval</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="application_date"/>
                <field name="expire_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--  search  -->
    <record model="ir.ui.view" id="view_expired_search">
        <field name="name">visa.approval.search</field>
        <field name="model">visa.approval</field>
        <field name="arch" type="xml">
            <search string="Visa">
                <filter name="is_expired" string="Is Expired" domain="[('is_expired', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="visa_approval_action" model="ir.actions.act_window">
        <field name="name">Visa Approval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">visa.approval</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_expired_search"/>
    </record>

    <menuitem id="employee_visa" name="Visa Management"
              sequence="2"/>
    <menuitem id="visa_management" name="Visa Management"
              parent="employee_visa"
              sequence="6"/>
    <menuitem id="visa_approval_menu" name="Visa Approval"
              parent="visa_management"
              action='visa_approval_action'
              sequence="4"/>

    <!--    #SEQUENCE-->
    <record id="sequence_self_service" model="ir.sequence">
        <field name="name">Visa Management</field>
        <field name="code">visa.management</field>
        <field name="active">TRUE</field>
        <field name="prefix">VP</field>
        <field name="padding">9</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

</odoo>