<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="onyx_view_facebook_form" model="ir.ui.view">
        <field name="name">onyx facebook</field>
        <field name="model">onyx.facebook</field>
        <field name="arch" type="xml">
            <form string="visa_application_view_form_facebook">
                <header>
                    <button name="button_facebook" string="facebook"
                            class="oe_highlight" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="client_id_facebook"/>
                        <field name="client_secret_facebook"/>
                        <!--&lt;!&ndash;                    <h1 class="head-class">&ndash;&gt;-->
                        <!--&lt;!&ndash;                        <field name="name"/>&ndash;&gt;-->
                        <!--&lt;!&ndash;                    </h1>&ndash;&gt;-->
                        <!--&lt;!&ndash;                    <field name="visa_approvals_ids"/>&ndash;&gt;-->
                    </group>
                </sheet>
            </form>
        </field>

    </record>
    <record id="res_config_settings_facebook_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.facebook</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="after">
                <h2>Facebook</h2>
                <div class="row mt16 o_settings_container" >
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Client Id" for="client_id_facebook"/>
                            <div class="text-muted">
                                Client Id of Facebook
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="client_id_facebook" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Client Secret" for="client_secret_facebook"/>
                            <div class="text-muted">
                                Client Secret of Facebook</div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="client_secret_facebook" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </field>
    </record>
    <record id="onyx_action_facebook" model="ir.actions.act_window">
        <field name="name">onyx facebook</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">onyx.facebook</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="onyx_menu_facebook" name="facebookl"
              sequence="8"/>
    <menuitem id="onyx_menu-link_facebook" name="Menu facebook"
              parent="onyx_menu_facebook"
              action='onyx_action_facebook'
              sequence="8"/>

</odoo>