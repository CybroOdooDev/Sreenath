<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="res_config_settings_ayrshare_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ayrshare</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="after">
                <h2>Ayrshare</h2>
                <div class="row mt16 o_settings_container" >
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="API Key" for="ayrshare_api_key"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="ayrshare_api_key" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>


    <record id="res_config_settings_view_form_inherit_dr_social_website" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="surveys_setting">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="dr_survey_id"/>
                        <div class="text-muted">
                            SignUp Surveys Format
                        </div>
                        <field name="dr_survey_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_users_view_form" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <field name="onboarding" invisible="1"/>
                 </xpath>
            </field>
    </record>

</odoo>
