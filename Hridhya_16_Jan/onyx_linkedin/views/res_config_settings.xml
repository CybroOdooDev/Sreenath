<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_linkedin_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.linkedin</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="after">
                <h2>Linkedin</h2>
                <div class="row mt16 o_settings_container" >
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Client Id" for="client_id"/>
                            <div class="text-muted">
                                Client Id of Linkedin
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="client_id" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Client Secret" for="client_secret"/>
                            <div class="text-muted">
                                Client Secret of Linkedin</div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="client_secret" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Message" for="linkedin_message"/>
                            <div class="text-muted">
                                Message
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="linkedin_message" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Image" for="linkedin_image"/>
                            <div class="text-muted">
                                Image
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="linkedin_image" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_right_pane">
                            <label string="Access Token" for="linkedin_access_token"/>
                            <div class="text-muted">
                                Access Token
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="linkedin_access_token" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </field>
    </record>

</odoo>