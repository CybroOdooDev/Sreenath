<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_inherits" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="description" position="after">
                <group string="Label Notes">
                    <field name="label_notes" nolabel="1" placeholder="This note is using in print label/barcode."/>
                </group>
            </field>
        </field>
    </record>

    <record id="product_products_template_inherit" model="ir.ui.view">
        <field name="name">product.pproductx`.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="description" position="after">
                <group string="Label Notes">
                    <field name="label_notes" nolabel="1" placeholder="This note is using in print label/barcode."/>
                </group>
            </field>
        </field>
    </record>

</odoo>