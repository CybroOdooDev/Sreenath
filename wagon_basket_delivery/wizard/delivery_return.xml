<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="delivery_return_wizard_form" model="ir.ui.view">
            <field name="name">delivery.return.wizard.form</field>
            <field name="model">delivery.return.wizard</field>
            <field name="arch" type="xml">
                <form string="Delivery Return">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" invisible="1"/>
                                <field name="qty_return"/>
                            </group>
                            <group>
                                <field name="reason"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" class="btn btn-primary"/>
                        <button string="Cancel" class="btn btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>