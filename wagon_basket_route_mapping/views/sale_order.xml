<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_slot_view_wagon" model="ir.ui.view">
            <field name="name">sale.order.view.wagon.route</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="is_deliver_map" invisible="1"/>
                    <field name="route_id" invisible="1"/>
                </field>
            </field>
        </record>
<record id="sale_order_slot_view_wagon_tree" model="ir.ui.view">
            <field name="name">sale.order.view.wagon.route.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="slot" invisible="0"/>
                    <field name="route_id" invisible="0"/>
                    <field name="package_count"/>
                </field>
            </field>
        </record>

    </data>
</odoo>