<odoo>

        <template id="report_simple_barcode_1">
            <div class="page" style="width: 70mm; display: inline-table; height: 30mm;">


                <table>
                    <tr>
                        <td class="text-center align-middle" style="height: 4rem;">

                            <t t-if="crate.name">
                                                <centre>

                                <img alt="Barcode" t-if="len(crate.name) == 13"
                                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(crate.name or ''), 600, 150)"
                                     style="width:100%;height:4rem;"/>
                                <img alt="Barcode" t-elif="len(crate.name) == 8"
                                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(crate.name or ''), 600, 150)"
                                     style="width:100%;height:4rem;" />
                                <img alt="Barcode" t-else=""
                                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(crate.name or ''), 600, 150)"
                                     style="width:100%;height:4rem;"/>

                                <strong>
                                                                    <span style="font-size:12px" t-field="crate.name"/>

                                </strong>
                                                                                                </centre>

<div/>                                <div class="position-relative">
                                                                                                <span style="position: absolute;bottom: -3px;left: 6px;font-size:12px" t-field="crate.sale_id.slot"/>
                                <span style="bottom: -15px;text-align: center;font-size:12px" t-field="crate.trolley_location_id.name"/>
                                    <span style="position: absolute;bottom: -3px;right: 5px;font-size:12px" t-field="crate.sale_id.del_date"/>

                                </div>
                            </t>
                            <t t-else="">
                                <span class="text-muted">No barcode available</span>
                            </t>

                        </td>
                    </tr>
                </table>

            </div>
        </template>
    <template id="report_packagebarcode">
    <t t-call="web.basic_layout">
        <div class="page">
            <t t-foreach="docs" t-as="template">
                <t t-foreach="template.crate_ids" t-as="crate">
                    <t t-call="wagon_basket_inventory.report_simple_barcode_1">
<!--                        <t t-set="product" t-value="product"/>-->
                    </t>
                </t>
            </t>
        </div>
    </t>
</template>
</odoo>