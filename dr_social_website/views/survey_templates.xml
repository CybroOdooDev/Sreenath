            <br/>
            <br/>

            <div class="db-sidebar-container">
                <!-- Sidebar -->
                <nav class="db-sidebar-2 px-4" style="margin-top: 61px;">
                    <div class="dropdown">
                        <div class="dropdown-menu db-sidebar__dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
