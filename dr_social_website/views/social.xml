<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="social_post_view_form" model="ir.ui.view">
            <field name="name">social.post.view.form.inherit.push_notifications</field>
            <field name="model">social.post</field>
            <field name="inherit_id" ref="social.social_post_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scheduled_date']" position="after">
                    <field name="feedback"/>
                    <field name="date" invisible="1"/>
                    <field name="revision_progress" invisible="1"/>
                    <field name="revision_button" invisible="1"/>
                    <field name="client_id"/>
                    <field name="client_ids"/>
                    <field name="client_name"/>
                </xpath>
            </field>
        </record>

        <record id="revision_request_client_view_form" model="ir.ui.view">
            <field name="name">revision.request.client.form</field>
            <field name="model">revision.request.client</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date_day"/>
                            <field name="date_month"/>
                            <field name="email_id"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="revision_request_client_view_tree" model="ir.ui.view">
            <field name="name">revision.request.client.tree</field>
            <field name="model">revision.request.client</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_day"/>
                    <field name="date_month"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_revision_request_client">
            <field name="name">Revision Request Client</field>
            <field name="res_model">revision.request.client</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <menuitem id="revision_request_client_menu" name="Client Name" parent="social.menu_social_configuration"
                  action="action_view_revision_request_client"/>

    </data>
</odoo>
