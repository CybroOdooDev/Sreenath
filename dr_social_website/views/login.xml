<odoo>
    <template id="logins" inherit_id="web.login" name="Loginsss">
        <xpath expr="//form[hasclass('oe_login_form')]" position="replace">


            <form class="oe_login_form" role="form" t-attf-action="/web/login" method="post"
                  onsubmit="this.action = '/web/login' + location.hash">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="db-login-container db-shadow">
                    <div class="db-login-contianer__header">
                        <img class="db-login-container__logo" width="64" height="64" style="margin-bottom: 6px;"
                             t-attf-src="/web/binary/company_logo"
                             alt="Logo"/>
                        <br/>
                        <h1 class="db-login-contianer__title" style="font-family: poppins !important;">
                            <strong>Welcome back</strong>
                        </h1>
                        <small class="db-login-contianer__lead">Welcome back please enter your details</small>
                    </div>
                    <div class="form-group field-db" t-if="databases and len(databases) &gt; 1"
                         style="display: none !important;">
                        <label for="db" class="col-form-label">Database</label>
                        <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                            <input type="text" name="db" t-att-value="request.db" id="db"
                                   t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                   required="required" readonly="readonly"/>
                            <span class="input-group-append">
                                <a role="button" href="/web/database/selector" class="btn btn-secondary">Select
                                    <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="db-login-container__body">
                        <div class="db-login-container__form-group mt-2 form-group field-login">
                            <label for="login" class="db-login-container__label mb-0">Email</label>
                            <input type="text" name="login" placeholder="Enter your email"
                                   class="db-login-container__input"
                                   t-att-value="login" id="login"
                                   t-attf-class="db-login-container__input form-control #{'form-control-sm' if form_small else ''}"
                                   required="required" autofocus="autofocus" autocapitalize="off"/>
                        </div>

                        <div class="db-login-container__form-group mt-2 form-group field-password">
                            <label for="password" class="db-login-container__label mb-0">Password</label>
                            <input type="password" class="db-login-container__input"
                                   placeholder="Password" name="password" id="password"
                                   t-attf-class="db-login-container__input form-control #{'form-control-sm' if form_small else ''}"
                                   required="required"
                                   autocomplete="current-password" t-att-autofocus="'autofocus' if login else None"
                                   maxlength="4096"/>
                        </div>
                    </div>
                    <div class="db-login-container__footer pt-2">
                        <a href="#" t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}"
                           class="db-login-container__link db-link--primary my-2">Forgot password
                        </a>
                    </div>


                    <p class="alert alert-danger" t-if="error" role="alert">
                        <t t-esc="error"/>
                    </p>
                    <p class="alert alert-success" t-if="message" role="status">
                        <t t-esc="message"/>
                    </p>
                    <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                        <button type="submit"
                                class="btn btn-primary btn-block db-button db-button--sm py-2 db-button--long db-button--primarys db-button--semi-round d-block my-2"
                                style="border-radius: 8px !important; font-size:20px;">Sign in
                        </button>
                        <div class="o_login_auth"/>
                    </div>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                </div>

                <input type="hidden" name="redirect" t-att-value="redirect"/>
            </form>
        </xpath>

    </template>
    <template id="auths_signups" inherit_id="web.login" name="Sign up - Forgot Password">
        <xpath expr="//button[@type='submit']" position="after">
            <div class="mt-2 d-flex small" style="padding-left: 25px;margin-top: 0px;padding-top: 10px;">&amp;emsp;
                Don't have an account?
                <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">
                    <p style="color: #43dbb6 !important;">&amp;emsp;Sign up</p>
                </a>
            </div>
        </xpath>
    </template>

</odoo>