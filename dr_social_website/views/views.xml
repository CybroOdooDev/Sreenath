<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="social_account_view_tree" model="ir.ui.view">
        <field name="name">social.account.view.tree.ext</field>
        <field name="model">social.account</field>
        <field name="inherit_id" ref="social.social_account_view_list"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="dr_account_user_id" />
            </field>
        </field>
    </record>

    <record id="social_post_view_inh_form" model="ir.ui.view">
        <field name="name">social.post.view.tree.ext</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="social.social_post_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_ids']" position="attributes">
                <attribute name="domain">[('id', 'in', context.get('dr_active_account_ids', []))]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
