<odoo>
    <template id="content_calendar" name="offer">
        <t t-call="website.layout">
            <div class="row o_wsale_products_main_row">
                <t t-foreach="posts" t-as="val">
                    <div class="col-md-12 dashboard-table">
                        <div class="col-md-8 bg-100 roundest-border table-1 py-5 text-center dashboard-table" style="box-shadow: 0px 0px 19px rgba(0, 0, 0, 0.05) inset;/*! margin-left: 7px; */
                               /*! height: 192px !important; */ /*! border-right-width: 0px; /*! padding-right: 260px; *//*! width: 70%; */">
                            <div class="width: 50%; sub-table-2">
                                <t t-esc="val.calendar_date"/>
                            </div>
                            <div class="image-table sub-table-2">
<!--                                <t t-esc="val.image_ids.datas"/>-->
                                 <img t-att-src="val.image_ids"/>
<!--                                <img  t-att-src="image_data_uri(val.image_ids)"/>-->
                            </div>
                            <div class="sub-table-1">
                                <t t-esc="val.message"/>
                            </div>
                        </div>
                        <div class="col-md-3 bg-100 roundest-border table-2 my-4 py-5 text-center"
                             style="box-shadow: 0px 0px 19px rgba(0, 0, 0, 0.05) inset; margin-left: 7px; height: 192px !important;width: 27%;">
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

</odoo>
