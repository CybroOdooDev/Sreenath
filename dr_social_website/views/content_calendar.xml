                <div class="db-wrapper">
                    <div class="db-sidebar-container">
                        <!-- Sidebar -->
                        <div class="db-sidebar">
                            <div class="dropdown">
                                <a href="#" class="db-sidebar__item" id="dropdownMenuLink" data-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </a>

                                <div class="dropdown-menu db-sidebar__dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </div>

                            <a href="#" class="db-sidebar__item">
                                <i class="fa fa-bell" aria-hidden="true"></i>
                            </a>
                            <a href="#" class="db-sidebar__item">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </a>
                        </div>
                        <!-- End of Sidebar -->
                    </div>
                    <div class="col-10">
                        <div class="row">
                            <t t-if="posts.filtered(lambda tx: tx.state in 'draft')">
                                <div class="top-text-org">
                                    <span class="top-text">Some posts need your approval! Without your approval they
                                        will not get
                                        published...
                                    </span>
                                </div>
                            </t>
                            <t t-foreach="posts" t-as="val">
                                <div class="col-sm-12 col md-12 dashboard-table" t-att-data-id="val.id" t-att-value="val.state">
<!--                                    <t t-if="val.state=='draft'">-->
<!--                                    </t>-->

                                    <div class="col-md-8 red-border">
                                        <div class="db-card" t-att-data-id="val.id" t-att-value="val.state">
                                            <div class="d-flex justify-content-center align-items-center px-4 my-2">
                                                <button class="red approve_button db-button db-button--actions db-button--round mr-2"
                                                        t-att-data-id="val.id"
                                                        t-value="val.state">
                                                    <i t-att-data-id="val.state" class="fa fa-check"/>
                                                </button>
                                                <button class="black not_approved_button db-button db-button--actions db-button--round "
                                                        t-att-data-id="val.id"
                                                        t-value="val.state">
                                                    <i t-att-data-id="val.state" class="fa fa-times db-button__icons"></i>
                                                </button>
                                                <script>
                                                    $('.black').on('click', function(e){
                                                    e.preventDefault();
                                                    $(this.offsetParent).css('border', '2px solid red');
                                                    $(this).css('background-color', 'red');
                                                    $(this.previousElementSibling).css('background-color', '#625454');
                                                    });
                                                </script>
                                                <script>
                                                    $('.red').on('click', function(e){
                                                    e.preventDefault();
                                                    $(this).css('background-color', '#21d297');
                                                    });
                                                </script>
                                            </div>
                                            <div class="d-flex justify-content-center align-items-center px-4 my-2">
                                                <div class="time_field width_time">
                                                    <div class="ui input left ">
                                                        <t t-if="val.time">
                                                           <input type="text" placeholder="Time" t-att-data-id="val.id"
                                                                   t-att-value="val.time" class="value_time"/>
                                                        </t>
                                                        <t t-else="">

                                                            <input type="text" placeholder="Time" t-att-data-id="val.id"
                                                                   class="value_time"/>
                                                        </t>
                                                    </div>
                                                </div>
                                                <div class="date_field width_date">
                                                    <div class="ui input left">
                                                        <t t-if="val.date">
                                                            <input type="date" placeholder="Date"
                                                                   class="date_input1 date_default db-calendar"
                                                                   t-att-value="val.date" t-att-data-id="val.id"/>
                                                        </t>
                                                        <t t-else="">
                                                            <input type="date" placeholder="Date"
                                                                   class="date_input1 date_default db-calendar"
                                                                   t-att-data-id="val.id"/>
                                                        </t>

                                                    </div>
                                                </div>
                                                <br/>
                                                <script>
                                                    $('.time_field').calendar({
                                                    type: 'time'
                                                    });

                                                    <!--                                                document.getElementById("date_id").value="2022-06-15"-->
                                                </script>
                                            </div>
                                            <div class="image-table add_image sub-table-2 my-2" t-att-data-id="val.id">
                                                <t t-if="val.image_ids.id">
                                                      <a href="#" class="db-card__image-link"
                                                        data-db-user-image="/dr_social_website/static/src/img/user.png" t-att-data-db-target="'/web/image/ir.attachment/'+str(val.image_ids.id)+'/datas'"
                                                        t-att-data-db-description="val.message">
                                                          <img t-att-src="'/web/image/ir.attachment/'+str(val.image_ids.id)+'/datas'"
                                                         class="image-table" t-att-data-id="val.id" alt="background"/>
<!--                                                        <img src="/image/bkg-2.jpg" class="db-card__image-thumbnail" alt="background"/>-->
                                                      </a><!--                                                    <img t-att-src="'/web/image/ir.attachment/'+str(val.image_ids.id)+'/datas'"-->
<!--                                                         class="image-table" t-att-data-id="val.id"/>-->
                                                </t>
                                                <t t-else="">
                                                    <div class="form-input">
                                                        <div class="preview">
                                                             <a href="#" class="db-card__image-link"
                                                                data-db-user-image="/dr_social_website/static/src/img/user.png"
                                                                t-att-data-db-target="'/web/image/ir.attachment/'+'preview_' + str(val.id)+'/datas'"
                                                                t-att-data-db-description="val.message">

                                                            <img t-att-id="'preview_' + str(val.id)"/>
                                                        </a>
                                                        </div>

                                                        <label t-att-for="val.id">Upload Image</label>

                                                        <input type="file" t-att-id="val.id" accept="image/*"
                                                               class="post_uploded_image" t-att-data-id="val.id"/>
                                                    </div>
                                                </t>
                                            </div>
                                            <div class="ml-4 db-card__textarea-container my-2">
                                                <!--                                            <div id="chartdiv"-->
                                                <!--                                                 style="width: 100%; height: 50px; background-color:#E8EDF2">-->


                                                <textarea class="db-form-control db-form-control--textarea w-100 post_message_textarea"
                                                        t-att-id="'chartdiv_'+str(val.id)"
                                                        t-att-data-id="val.id" name="message" style="overflow:hidden"><t t-esc="val.message"/></textarea>
                                                <!--                                            </div>-->
    <!--                                            <t t-set="char" t-value="'chartdiv_' + str(val.id)"/>-->
    <!--                                            <t t-esc="char"/>-->
                                                <div class="show_more more-text" t-att-data-id="val.id">
    <!--                                                    onClick="document.getElementById('chartdiv_'+String(val.id)).style.height = '300px';">-->
                                                    ...more
                                                    <!--                                                <img src="images/down.png" class="arrow">-->
                                                </div>
                                                <div class="show_less more-text" t-att-data-id="val.id">
    <!--                                                    onClick="document.getElementById('char').style.height = '150px';">-->
                                                    ...less
                                                    <!--                                                <img src="images/up.png" class="arrow">-->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col md-12 col-lg-4" style="margin-top: 20px;">
                                        <div class="db-card2">
                                            <div class="ml-3 db-card__textarea-container my-2">

                                                <t t-if="val.feedback">
                                                    <textarea id="feedback" t-att-data-id="val.id"
                                                              class="db-form-control db-form-control--textarea w-100 post_feedback_textarea feedback_revision"
                                                              name="feedback"><t t-esc="val.feedback"/></textarea>
                                                </t>
                                                <t t-else="">
                                                    <textarea id="feedback" placeholder="FEEDBACK..."
                                                              t-att-data-id="val.id"
                                                              class="db-form-control db-form-control--textarea w-100 post_feedback_textarea feedback_revision"
                                                              name="feedback"/>
                                                </t>
                                                <div class="db-card__status">
                                                    <div class="revision db-card__status-text mr-2"
                                                         t-att-id="'revision_'+str(val.id)">
                                                        Revision Done
                                                    </div>

                                                    <button class="grey db-button db-button--actions db-button--round mr-2"
                                                            id="val.id">
                                                        <i t-att-id="val.id" class="fa fa-check"/>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <script>
                                            $('.grey').on('click', function(e){
                                            e.preventDefault();
                                            $(this).css('background-color', '#21d297');
                                            var value = 'revision_'+ String(e.target.id);
                                            $('#'+ value).show();
                                            });
                                        </script>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
