<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_dr_social_website" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="surveys_setting">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="dr_survey_id"/>
                        <div class="text-muted">
                            SignUp Surveys Form
                        </div>
                        <field name="dr_survey_id" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
