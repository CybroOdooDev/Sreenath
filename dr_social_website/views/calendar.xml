<odoo>
    <template id="content_calendar" name="offer">
        <t t-call="website.layout">
            <div class="row o_wsale_products_main_row">
                <head>
                    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet"
                          type="text/css"/>
                    <link href="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.css"
                          rel="stylesheet" type="text/css"/>
                    <script src="https://code.jquery.com/jquery-2.1.4.js"/>
                    <script src="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.js"/>
                    <meta charset="utf-8"/>
                </head>
                <t t-foreach="posts" t-as="val">
                    <div class="col-md-12 dashboard-table" t-att-data-id="val.id">
                        <div class="col-md-8 shadow-table-1 roundest-border table-1 py-5 text-center dashboard-table"
                             style="box-shadow: 0px 0px 19px rgba(0, 0, 0, 0.05) inset;/*! margin-left: 7px; */ /*! height: 192px !important; */ /*! border-right-width: 0px; /*! padding-right: 260px; *//*! width: 70%; */">
                            <div class="width: 50%; sub-table-2">
                                <div class="ui container">
                                    <h3>Date</h3>
                                    <div id="date">
                                        <div class="ui input left icon">
                                            <i class="calendar icon"/>
                                            <input type="text" placeholder="Date"/>
                                        </div>
                                    </div>
                                    <br/>
                                    <h3>Time</h3>
                                    <div id="time">
                                        <div class="ui input left icon">
                                            <i class="time icon"/>
                                            <input type="text" placeholder="Time"/>
                                        </div>
                                    </div>
                                </div>
<!--                                <script>-->
<!--                                    $('#date').calendar({-->
<!--                                    type: 'date'-->
<!--                                    });-->
<!--                                    $('#time').calendar({-->
<!--                                    type: 'time'-->
<!--                                    });-->

<!--                                </script>-->
                            </div>
                            <div class="image-table sub-table-2">
                                <t t-if="val.image_ids.id">
                                    <img t-att-src="'/web/image/ir.attachment/'+str(val.image_ids.id)+'/datas'"
                                         class="image-table"/>
                                </t>
                            </div>
                            <div class="sub-table-1">
                                <t t-esc="val.message"/>
                            </div>
                        </div>
                        <div class="col-md-3 bg-100 roundest-border table-2 my-4 py-5 text-center shadow-table-1"
                             style="box-shadow: 0px 0px 19px rgba(0, 0, 0, 0.05) inset; margin-left: 7px; height: 192px !important;width: 27%;">
                            <textarea id="feedback" class="form-control post_feedback_textarea" t-att-data-id="val.id"
                                      name="feedback" required="">
                                <t t-esc="val.feedback"/>
                            </textarea>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
